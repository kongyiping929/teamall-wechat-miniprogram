/* 用户查询 */

/* 查询栏 */
.queryBar {
    box-sizing: border-box;
    height: 160rpx;
    background-color: #fff;
    border-top: 1rpx solid #D7E0E0;
    padding: 33rpx 30rpx;
    margin-bottom: 20rpx;
}

.queryFrame {
    box-sizing: border-box;
    display: flex;
    align-items: center;
    width: 100%;
    height: 100%;
    background: rgba(244, 244, 244, 1);
    border-radius: 8rpx;
    padding: 0 30rpx;
}

.queryFrame input {
    flex: 1;
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(85, 98, 102, 1);
}

.queryFrame text {
    width: 116rpx;
    height: 60rpx;
    background: rgba(121, 146, 98, 1);
    border-radius: 12rpx;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 60rpx;
    color: rgba(255, 255, 255, 1);
    text-align: center;
    margin-left: 20rpx;
}

/* 用户账号 */
.account {
    box-sizing: border-box;
    display: flex;
    align-items: center;
    width: 690rpx;
    height: 112rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
    margin: 0 auto 20rpx;
    padding: 0 32rpx;
}

.account image:first-child {
    width: 64rpx;
    height: 64rpx;
    margin-right: 32rpx;
}

.account text:nth-child(2) {
    flex: 1;
    font-size: 32rpx;
    font-weight: 600;
    color: rgba(66, 76, 80, 1);
}

.account image:last-child {
    width: 24rpx;
    height: 24rpx;
}