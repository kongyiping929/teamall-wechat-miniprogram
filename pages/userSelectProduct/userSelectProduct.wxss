/* 产品选择 */
page {
    padding-top: 20rpx;
}

/* 产品列表 */
.item {
    box-sizing: border-box;
    display: flex;
    align-items: center;
    width: 690rpx;
    height: 112rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
    margin: 0 auto 20rpx;
    padding: 0 32rpx;
}

.item text:first-child {
    font-size: 32rpx;
    font-weight: 400;
    color: rgba(66, 76, 80, 1);
    margin-right: 16rpx;
}

.item text:nth-child(2) {
    padding: 0 12rpx;
    font-size: 20rpx;
    font-weight: 400;
    color: rgba(157, 175, 132, 1);
    height: 48rpx;
    line-height: 48rpx;
    background: rgba(157, 175, 132, 0.2);
    border-radius: 8rpx;
}

.item view {
    flex: 1;
    text-align: right;
}

.item image {
    width: 24rpx;
    height: 24rpx;
}