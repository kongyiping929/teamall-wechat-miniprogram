/* pages/getUserInfo/getUserInfo.wxss */
page {
    background: #fff;
}

.logo {
    width: 90%;
    height: 400rpx;
    margin: 0 auto 180rpx;
    padding-top: 100rpx;
    border-bottom: 2rpx solid rgba(238, 238, 238, 1);
}

.logo image {
    display: block;
    width: 244rpx;
    height: 316rpx;
    margin: 0 auto 18rpx;
}

.logoTitle {
    height: 44rpx;
    font-size: 32rpx;
    font-weight: 500;
    line-height: 44rpx;
    color: rgba(51, 51, 51, 1);
    text-align: center;
}

.logoTip {
    height: 34rpx;
    font-size: 24rpx;
    font-weight: 300;
    line-height: 34rpx;
    color: rgba(51, 51, 51, 1);
    text-align: center;
    margin-bottom: 62rpx;
}

button {
    display: block;
    width: 680rpx;
    height: 80rpx;
    background: rgba(4, 190, 1, 1);
    border-radius: 10rpx;
    font-size: 32rpx;
    font-weight: 400;
    line-height: 88rpx;
    color: rgba(255, 255, 255, 1);
    text-align: center;
    padding: 0;
}