/* 我的收藏 */
page {
    padding: 30rpx;
}

/* 列表 */
.list {
    box-sizing: border-box;
    width: 690rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
    padding: 24rpx 24rpx 0;
}

.item {
    display: flex;
    width: 642rpx;
    height: 254rpx;
    padding-bottom: 24rpx;
}

.couponItem {
  position: relative;
  box-sizing: border-box;
  padding: 6rpx 24rpx 0;
  width: 690rpx;
  height: 240rpx;
  margin-bottom: 24rpx;
  background-color: #fff;
  border-radius: 10rpx;
  background-image: url("/assets/image/confirmOrder/couponBg@2x.png");
  background-size: 100%;
}

.couponItem:last-child {
  margin: 0;
}

.couponItemTop {
  font-size: 34rpx;
  display: flex;
  justify-content: space-between;
  height: 136rpx;
  color: rgba(237, 87, 53, 1);
  border-bottom: 2rpx solid rgba(215, 224, 224, 0.3);
}

.couponItemTop view:first-child view:first-child {
  padding-top: 24rpx;
  display: flex;
  align-items: center;
  height: 40rpx;
  margin-bottom: 8rpx;
}

.couponItemTop view:first-child view:first-child text:first-child {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(85, 98, 102, 1);
  margin-right: 12rpx;
}

.couponItemTop view:first-child view:first-child text:last-child {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(85, 98, 102, 1);
}

.couponItemTop view:first-child view:last-child {
  height: 34rpx;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 34rpx;
  color: rgba(172, 187, 188, 1);
}

.couponItemTop view:last-child{
  display: flex;
  align-items: center;
}
.couponItemTop view:last-child view:last-child{
  padding-top: 26rpx;
}

.couponItemTop  view:last-child view:first-child text:first-child {
  font-size: 72rpx !important;
  font-weight: Medium;
  margin: 0 10rpx;
}

.couponItemBottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding-top: 6rpx;
  height: 98rpx;
}


.couponItemBottom text:first-child, .couponItemBottom text:nth-child(2) {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(172, 187, 188, 1);
}

.couponNone {
  padding-top: 108rpx;
  margin-bottom: 30rpx;
}

.couponNone .couponNoneBg {
  width: 200rpx;
  height: 144rpx;
  margin: 0 auto 60rpx;
}

.couponNone .couponNoneBg image {
  width: 100%;
  height: 100%;
  vertical-align: middle;
}

.couponNoneTip {
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  line-height: 40rpx;
  color: rgba(153, 153, 153, 1);
  margin-bottom: 60rpx;
  text-align: center;
}

.couponNoneBtn {
  width: 690rpx;
  height: 88rpx;
  background: rgba(121, 146, 98, 1);
  border-radius: 88rpx;
  margin-bottom: 30rpx;
  text-align: center;
  line-height: 88rpx;
  font-size: 36rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  margin: 0 auto;
}

.itemPdNum text:first-child {
    text-decoration: line-through;
}