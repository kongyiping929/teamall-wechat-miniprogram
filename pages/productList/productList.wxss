page {
    background-color: #F4F4F4;
}

/* 顶部状态栏 */
.select {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 120rpx;
    padding: 25rpx 30rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    z-index: 999;
    background-color: #F4F4F4;
}

.select text {
    width: 333rpx;
    height: 70rpx;
    line-height: 70rpx;
    border: 2rpx solid rgba(121, 146, 98, 1);
    border-radius: 10rpx;
    text-align: center;
    font-size: 32rpx;
    font-weight: 400;
    color: rgba(121, 146, 98, 1);
}

.select text.active {
    background: rgba(121, 146, 98, 1);
    color: rgba(255, 255, 255, 1);
}

/* 佳节礼品 */
.select.gift text {
    border: 2rpx solid rgba(198, 156, 109, 1);
    color: rgba(198, 156, 109, 1);
}

.select.gift text.active {
    background: rgba(198, 156, 109, 1);
    color: rgba(255, 255, 255, 1);
}

/* 优惠不断 */
.select.discounts text {
    border: 2rpx solid rgba(237, 87, 53, 1);
    color: #ED5735;
}

.select.discounts text.active {
    background: #ED5735;
    color: #fff;
}

/* 产品列表 */
.productWapper {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    padding: 120rpx 30rpx 0;
}

.productItem {
    position: relative;
    width: 333rpx;
    height: 530rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
    margin-bottom: 25rpx;
    overflow: hidden;
}

.productBg {
    width: 333rpx;
    height: 333rpx;
    vertical-align: middle;
}

.productIcon {
    position: absolute;
    top: 0;
    right: 20rpx;
    width: 50rpx;
    height: 70rpx;
}

.productName {
    padding: 10rpx 0 10rpx 24rpx;
    height: 45rpx;
    font-size: 32rpx;
    font-weight: 400;
    line-height: 45rpx;
    color: rgba(66, 76, 80, 1);
}

.productPrice {
    display: flex;
    align-items: center;
    padding-left: 24rpx;
    margin-bottom: 16rpx;
    height: 45rpx;
}

.productPrice text:first-child {
    font-size: 32rpx;
    font-weight: 600;
    color: rgba(247, 55, 2, 1);
    margin-right: 12rpx;
}

.productPrice text:last-child {
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(172, 187, 188, 1);
    text-decoration: line-through;
}

.productSales {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 72rpx;
    padding: 0 24rpx;
    border-top: 1rpx solid #D7E0E0;
}

.productSales text:first-child {
    /* width: 120px; */
    padding: 0 13rpx;
    height: 48rpx;
    line-height: 48rpx;
    background: rgb(173, 218, 112, 0.2);
    border-radius: 12rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(157, 175, 132, 1);
}

.productSales text:last-child {
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(172, 187, 188, 1);
}