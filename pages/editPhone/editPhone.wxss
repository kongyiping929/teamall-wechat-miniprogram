/* pages/editPhone/editPhone.wxss */
page {
    background-color: #F4F4F4;
}

.form {
    background-color: #fff;
    margin-top: 20rpx;
    margin-bottom: 80rpx;
}

.lfrg {
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    height: 100rpx;
}

.lfrg span {
    width: 178rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #515c6f;
}

.lfrg input {
    flex: 1;
    height: 100rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #999999;
}

.lfrg input::-webkit-input-placeholder {
    color: rgba(153, 153, 153, 0.5);
}

.lfrg input:-moz-placeholder {
    color: rgba(153, 153, 153, 0.5);
}

.lfrg input::-moz-placeholder {
    color: rgba(153, 153, 153, 0.5);
}

.lfrg input:-ms-input-placeholder {
    color: rgba(153, 153, 153, 0.5);
}

.codeHead {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 30rpx;
    height: 100rpx;
}

.codeHead span {
    height: 100rpx;
    line-height: 100rpx;
    width: 178rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #515c6f;
}

.codeHead input {
    flex: 1;
    width: 100rpx;
    height: 100rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #999999;
}

.codeHead input::-webkit-input-placeholder {
    color: rgba(153, 153, 153, 0.5);
}

.codeHead input:-moz-placeholder {
    color: rgba(153, 153, 153, 0.5);
}

.codeHead input::-moz-placeholder {
    color: rgba(153, 153, 153, 0.5);
}

.codeHead input:-ms-input-placeholder {
    color: rgba(153, 153, 153, 0.5);
}

.codeHead .code {
    width: 200rpx;
    height: 72rpx;
    line-height: 72rpx;
    text-align: center;
    background: #799262;
    border-radius: 8rpx;
    font-size: 30rpx;
    font-weight: 500;
    color: white;
}

.codeHead .code.not {
    background-color: #EEEEEE;
    color: "#999999";
}

.codeHead:first-child {
    border-bottom: 2rpx solid #f5f8f8;
}

.btn {
    width: 672rpx;
    height: 100rpx;
    background: #799262;
    /* box-shadow: 0rpx 10rpx 20rpx rgba(5, 214, 204, 0.5); */
    border-radius: 8rpx;
    margin: 0 auto;
    font-size: 36;
    font-weight: 400;
    line-height: 100rpx;
    color: white;
    text-align: center;
}