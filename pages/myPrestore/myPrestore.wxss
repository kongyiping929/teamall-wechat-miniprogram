/* 我的预存 */

/* 顶部 */
.top {
    height: 454rpx;
    margin-bottom: 16rpx;
}

.topMes {
    display: flex;
    box-sizing: border-box;
    padding-top: 18rpx;
    height: 230rpx;
    background-color: #799262;
}

.topMes image {
    margin: 0 42rpx 0 30rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
}

.topMesCon {
    flex: 1;
}

.topMesTitle {
    height: 40rpx;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 40rpx;
    color: rgba(255, 255, 255, 1);
    margin-bottom: 8rpx;
}

.topMesPrice {
    height: 66rpx;
    font-size: 48rpx;
    font-weight: 500;
    line-height: 66rpx;
    color: rgba(255, 255, 255, 1);
}

.select {
    box-sizing: border-box;
    position: relative;
    top: -66rpx;
    width: 690rpx;
    height: 290rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
    margin: 0 auto;
    padding: 0 32rpx;
}

.selectTitle {
    padding: 28rpx 0 32rpx;
    height: 34rpx;
    font-size: 24rpx;
    font-weight: 400;
    line-height: 34rpx;
    color: rgba(85, 98, 102, 1);
}

.selectWap {
    display: flex;
    justify-content: space-between;
    height: 56rpx;
    margin-bottom: 32rpx;
}

.selectItem {
    flex: 1;
    display: flex;
    align-items: center;
    height: 56rpx;
}

.selectItem image {
    width: 24rpx;
    height: 24rpx;
    margin-right: 16rpx;
}

.selectItemPrcie {
    font-size: 40rpx;
    font-weight: 500;
    color: rgba(53, 53, 53, 1);
}

.selectBtn {
    width: 380rpx;
    height: 76rpx;
    background: rgba(237, 87, 53, 1);
    box-shadow: 0rpx 6rpx 12rpx rgba(237, 87, 53, 0.3);
    border-radius: 88rpx;
    margin: 0 auto;
    font-size: 32rpx;
    font-weight: 400;
    line-height: 76rpx;
    color: rgba(255, 255, 255, 1);
    text-align: center;
}

/* 列表 */
.list {
    width: 690rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
    margin: 0 auto;
}

.listTitle {
    padding: 24rpx 32rpx 18rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(66, 76, 80, 1);
}

.item {
    padding: 32rpx;
    border-top: 1rpx solid rgba(215, 224, 224, 1);
}

.itemTime {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 34rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(172, 187, 188, 1);
    margin-bottom: 18rpx;
}

.itemPrice {
    display: flex;
    align-items: center;
    height: 40rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #556266;
}

.itemPrice text:nth-child(2) {
    color: #799262;
    margin-right: 34rpx;
    margin-left: 10rpx;
}

.itemPrice text:nth-child(4) {
    color: #ED5735;
    margin-left: 10rpx;
}