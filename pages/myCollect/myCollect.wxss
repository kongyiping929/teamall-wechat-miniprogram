/* 我的收藏 */
page {
    padding: 30rpx;
}

/* 列表 */
.list {
    box-sizing: border-box;
    width: 690rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
    padding: 24rpx 24rpx 0;
}

.item {
    display: flex;
    width: 642rpx;
    height: 254rpx;
    padding-bottom: 24rpx;
}

.itemProductImg {
    width: 254rpx;
    height: 254rpx;
    margin-right: 24rpx;
}

.itemPd {
    width: 364rpx;
    height: 254rpx;
}

.itemPdTitle {
    height: 82rpx;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 41rpx;
    color: rgba(66, 76, 80, 1);
    margin-bottom: 24rpx;
}

.itemPdAttr {
    display: inline-block;
    max-width: 338rpx;
    padding: 7rpx 14rpx;
    height: 48rpx;
    background: rgba(157, 175, 132, 0.2);
    border-radius: 8rpx;
    font-size: 24rpx;
    font-weight: 400;
    line-height: 48rpx;
    color: rgba(157, 175, 132, 1);
    margin-bottom: 8rpx;
}

.itemPdPrice {
    height: 40rpx;
    font-size: 28rpx;
    font-weight: 600;
    line-height: 40rpx;
    color: rgba(247, 55, 2, 1);
    margin-bottom: 12rpx;
}

.itemPdNum {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 28rpx;
}

.itemPdNum text {
    font-size: 20rpx;
    font-weight: 400;
    color: rgba(172, 187, 188, 1);
}

.itemPdNum text:first-child {
    text-decoration: line-through;
}