/* 店铺信息 */
page {
    padding-top: 20rpx;
    background-color: #f4f4f4;
}

.location {
    box-sizing: border-box;
    display: flex;
    align-items: center;
    padding: 0 32rpx;
    width: 690rpx;
    height: 100rpx;
    background-color: #fff;
    border-radius: 20rpx;
    margin: 0 auto 20rpx;
}

.location text:first-child {
    padding-right: 32rpx;
    font-size: 32rpx;
    font-weight: 500;
    color: rgba(85, 98, 102, 1);
}

.location image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 8rpx;
}

.location text:last-child {
    font-size: 32rpx;
    font-weight: 500;
    color: rgba(85, 98, 102, 1);
}

/* 附近店铺 */
.nearby {
    width: 690rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
    margin: 0 auto 20rpx;
}

.nearbyTitle {
    height: 40rpx;
    padding: 24rpx 32rpx 18rpx;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 40rpx;
    color: rgba(85, 98, 102, 1);
}

.nearbyTitle text:last-child {
    color: #F76260;
}

.nearbyItem {
    padding: 28rpx 32rpx 34rpx;
    border-top: 1rpx solid rgba(215, 224, 224, 1);
}

.nearbyItemT {
    display: flex;
    align-items: center;
    height: 44rpx;
    margin-bottom: 16rpx;
}

.nearbyItemT text:first-child {
    font-size: 32rpx;
    font-weight: 500;
    color: rgba(66, 76, 80, 1);
    margin-right: 32rpx;
}

.nearbyItemT text:last-child {
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(85, 98, 102, 1);
}

.nearbyItemAddress {
    font-size: 24rpx;
    font-weight: 400;
    line-height: 34rpx;
    color: rgba(172, 187, 188, 1);
}