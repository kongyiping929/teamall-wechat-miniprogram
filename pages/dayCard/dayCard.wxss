/* 每日打卡 */
page {
    padding-top: 20rpx;
}

/* 打卡信息 */
.cardMes {
    box-sizing: border-box;
    width: 690rpx;
    height: 258rpx;
    background-color: #fff;
    padding: 8rpx 20rpx 0;
    margin: 0 auto 20rpx;
    border-radius: 20rpx;
}

.cardMesTop {
    display: flex;
    align-items: center;
    padding: 16rpx 0;
    height: 128rpx;
    border-bottom: 1rpx solid rgba(215, 224, 224, 0.3);
}

.cardMesTopImg {
    width: 115rpx;
    height: 88rpx;
    margin-right: 42rpx;
}

.cardMesTopTip {
    height: 128rpx;
}

.cardMesTopTipNum {
    display: flex;
    align-items: center;
    height: 50rpx;
    padding: 14rpx 0 12rpx;
    font-size: 36rpx;
    font-weight: 600;
    color: rgba(121, 146, 98, 1);
}

.cardMesTopTipNum text:first-child {
    margin-right: 10rpx;
    color: #424C50;
}

.cardMesTopTipTicket {
    height: 34rpx;
    font-size: 24rpx;
    font-weight: 400;
    line-height: 34rpx;
    color: rgba(172, 187, 188, 1);
}

.cardMesBottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 90rpx;
}

.cardMesBottomL {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(66, 76, 80, 1);
}

.cardMesBottomR {
    height: 90rpx;
    display: flex;
    align-items: center;
}

.cardMesBottomR text {
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(121, 146, 98, 1);
    margin-right: 4rpx;
}

.cardMesBottomR image {
    width: 24rpx;
    height: 24rpx;
}

/* 打卡输入 */
.inputBox {
    box-sizing: border-box;
    padding: 0 32rpx;
    width: 690rpx;
    /* height: 440rpx; */
    margin: 0 auto 20rpx;
    background-color: #fff;
    border-radius: 20rpx;
}

.inputWapper {
    padding: 22rpx 0;
    height: 320rpx;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 40rpx;
    color: #424C50;
}

.placeholderStyle {
    color: rgba(215, 224, 224, 1);
}

.addImageBox {
    display: flex;
    flex-wrap: nowrap;
    height: 164rpx;
    padding-bottom: 32rpx;
}

.addImage {
    position: relative;
    height: 164rpx;
    width: 164rpx;
    background: rgba(239, 239, 239, 1);
    border-radius: 8rpx;
}

.addImage::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 4rpx;
    height: 48rpx;
    background: rgba(85, 98, 102, 1);
    border-radius: 2rpx;
    transform: translate(-50%, -50%);
}

.addImage::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 48rpx;
    height: 4rpx;
    background: rgba(85, 98, 102, 1);
    border-radius: 2rpx;
    transform: translate(-50%, -50%);
}

.addImageItem {
    width: 164rpx;
    height: 164rpx;
    border-radius: 8rpx;
    overflow: hidden;
    margin-right: 16rpx;
}

.addImageItem image {
    width: 100%;
    height: 100%;
}

/* 产品信息 */
.product {
    box-sizing: border-box;
    width: 690rpx;
    height: 280rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
    margin: 0 auto 36rpx;
    padding: 0 32rpx;
}

.productName {
    height: 88rpx;
    font-size: 28rpx;
    font-weight: 500;
    line-height: 88rpx;
    color: rgba(66, 76, 80, 1);
}

.productMes {
    background-color: #fff;
    height: 160rpx;
    box-sizing: border-box;
    display: flex;
    padding-bottom: 32rpx;
}

.productPhoto {
    width: 160rpx;
    height: 160rpx;
    margin-right: 28rpx;
}

.productWapper {
    width: 438rpx;
    height: 160rpx;
}

.productTitle {
    height: 44rpx;
    font-size: 32rpx;
    font-weight: 400;
    line-height: 44rpx;
    color: rgba(66, 76, 80, 1);
    margin-bottom: 14rpx;
}

.productPrice {
    display: flex;
    align-items: center;
    height: 42rpx;
    margin-bottom: 18rpx;
}

.productPrice text:first-child {
    font-size: 30rpx;
    font-weight: 600;
    color: rgba(247, 55, 2, 1);
    margin-right: 20rpx;
}

.productPrice text:last-child {
    font-size: 22rpx;
    font-weight: 400;
    color: rgba(172, 187, 188, 1);
    text-decoration: line-through;
}

.productSelect {
    display: inline-block;
    box-sizing: border-box;
    padding: 11rpx 14rpx;
    line-height: 24rpx;
    height: 46rpx;
    background: rgba(243, 248, 241, 1);
    border-radius: 4rpx;
}

.productSelect text {
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(172, 187, 188, 1);
    margin-right: 4rpx;
}

.productSelect image {
    width: 24rpx;
    height: 24rpx;
    vertical-align: middle;
}

/* 打开按钮 */
.btn {
    width: 690rpx;
    height: 88rpx;
    background: rgba(121, 146, 98, 1);
    margin: 0 auto;
    font-size: 36rpx;
    font-weight: 400;
    line-height: 88rpx;
    color: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
    text-align: center;
    margin-bottom: 32rpx;
}

/* 打卡成功模态框 */
.modal {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
}

.modalWapper {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 540rpx;
    height: 424rpx;
    transform: translate(-50%, -50%);
    background: rgba(255, 255, 255, 1);
    border-radius: 24rpx;
}

.modalTitle {
    padding-top: 40rpx;
    height: 48rpx;
    margin-bottom: 14rpx;
    font-size: 34rpx;
    font-weight: 600;
    line-height: 48rpx;
    color: rgba(85, 98, 102, 1);
    text-align: center;
}

.modalMes .modalMesBg {
    width: 200rpx;
    height: 144rpx;
    margin: 0 auto 10rpx;
}

.modalMes .modalMesBg image {
    width: 200rpx;
    height: 144rpx;
    vertical-align: middle;
}

.modalMes .modalMesTip {
    height: 40rpx;
    font-size: 28rpx;
    font-weight: 600;
    line-height: 40rpx;
    color: rgba(153, 153, 153, 1);
    text-align: center;
    padding-bottom: 34rpx;
    border-bottom: 2rpx solid rgba(242, 242, 243, 1);
}

.modalFooter {
    display: flex;
    align-items: center;
    height: 92rpx;
}

.modalFooter text:first-child,
.modalFooter text:last-child {
    width: 269rpx;
    text-align: center;
}

.modalFooter text:first-child {
    font-size: 34rpx;
    font-weight: 600;
    color: rgba(85, 98, 102, 1);
}

.modalFooter text:last-child {
    font-size: 34rpx;
    font-weight: 600;
    color: #799262;
}

.modalFooter text:nth-child(2) {
    width: 2rpx;
    height: 92rpx;
    background-color: rgba(242, 242, 243, 1);
}

.modalRollBox {
    height: 228rpx;
    border-bottom: 2rpx solid rgba(242, 242, 243, 1);
}

.modalRoll {
    box-sizing: border-box;
    position: absolute;
    top: 70rpx;
    left: 22rpx;
    width: 498rpx;
    height: 254rpx;
    padding-left: 58rpx;
    padding-right: 54rpx;
}

.modalRoll image {
    position: absolute;
    top: 0;
    left: 0;
    width: 498rpx;
    height: 254rpx;
    z-index: -1;
}

.modalRollTop {
    padding-top: 54rpx;
    display: flex;
    justify-content: space-between;
    margin-bottom: 36rpx;
}

.modalRollTopL view:first-child {
    height: 40rpx;
    font-size: 28rpx;
    font-weight: 500;
    line-height: 40rpx;
    color: rgba(85, 98, 102, 1);
    margin-bottom: 8rpx;
}

.modalRollTopL view:last-child {
    height: 34rpx;
    font-size: 24rpx;
    font-weight: 400;
    line-height: 34rpx;
    color: rgba(172, 187, 188, 1);
}

.modalRollTopR {
    padding-top: 8rpx;
    height: 76rpx;
}

.modalRollTopR text:first-child {
    height: 76rpx;
    font-size: 54rpx;
    font-weight: 400;
    line-height: 76rpx;
    color: rgba(237, 87, 53, 1);
    margin-right: 10rpx;
}

.modalRollTopR text:last-child {
    font-size: 22rpx;
    font-weight: 400;
    color: #ED5735;
}

.modalRollBottom {
    display: flex;
    align-items: center;
    height: 34rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(172, 187, 188, 1);
}

.modalRollBottom text:first-child {
    margin-right: 16rpx;
}