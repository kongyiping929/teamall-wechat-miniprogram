/**index.wxss**/

page {
  background-color: #F4F4F4;
}

/* 地址 */
.address {
  display: flex;
  align-items: center;
  height: 48rpx;
  padding-left: 30rpx;
  margin-bottom: 44rpx;
}

.address image {
  width: 24rpx;
  height: 29rpx;
  
}

.address text {
  font-size: 34rpx;
  font-weight: 500;
  margin-left: 12rpx;
  color: rgba(53, 53, 53, 1);
}

/* 轮播图 */
swiper, block, swiper-item, image {
  width: 690rpx;
  height: 217rpx;
}

swiper {
  border-radius: 20rpx;
  overflow: hidden;
  margin: 0 auto 20rpx;
}

/* 导航 */
.nav {
  display: flex;
  width: 100%;
  justify-content: space-evenly;
  height: 156rpx;
  margin-bottom: 24rpx;
}

.nav navigator {
  width: 120rpx;
  height: 156rpx;
}

.nav navigator image {
  width: 120rpx;
  height: 120rpx;
}

.nav navigator text {
  display: block;
  width: 120rpx;
  height: 32rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 32rpx;
  color: rgba(66, 76, 80, 1);
}

/* 签到 */
.signIn {
  position: relative;
  margin: 0 auto 12rpx;
}

.signIn image {
  width: 750rpx;
  height: 170rpx;
}
.signIn text {
  position: absolute;
  font-size: 24rpx;
  color: #fff;
  bottom: 60rpx;
  left: 229rpx;
}

/* 最新上架 */
.newReleases .newReleasesTitle {
  position: relative;
  height: 50rpx;
  font-size: 36rpx;
  font-weight: 500;
  line-height: 50rpx;
  text-indent: 30rpx;
  color: rgba(66, 76, 80, 1);
  margin-bottom: 30rpx;
}

.newReleases .newReleasesTitle::after {
  content: '';
  position: absolute;
  top: 5rpx;
  left: 0;
  width: 10rpx;
  height: 40rpx;
  background-color: #9DAF84;
  border-top-right-radius: 5rpx;
  border-bottom-right-radius: 5rpx;
}

.newReleasesWap {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  margin-bottom: 2rpx;
}

.newReleasesItem {
  position: relative;
  width: 334rpx;
  height: 530rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  margin-left: 30rpx;
}

.newReleasesItem .newReleasesItem_productPhoto {
  width: 334rpx;
  height: 334rpx;
  margin-bottom: 8rpx;
}

.newReleasesItem .newReleasesItem_newIcon {
  position: absolute;
  top: 0;
  right: 20rpx;
  width: 50rpx;
  height: 70rpx;
}

.newReleasesItem_Title {
  padding-left: 24rpx;
  height: 44rpx;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 44rpx;
  color: rgba(66, 76, 80, 1);
  margin-bottom: 4rpx;
}

.newReleasesItem_Price {
  display: flex;
  align-items: center;
  padding-left: 24rpx;
  height: 46rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(215, 224, 224, 1);
}

.newReleasesItem_Price text:first-child {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(247, 55, 2, 1);
  padding-right: 18rpx;
}

.newReleasesItem_Price text:last-child {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(172, 187, 188, 1);
  text-decoration: line-through;
}

.newReleasesItem_sales {
  margin-top: -6rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 78rpx;
  padding: 0 24rpx;
}

.newReleasesItem_sales text:first-child {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(172, 187, 188, 1);
}

.newReleasesItem_sales text:last-child {
  /* display: block */
  padding: 8rpx 12rpx;
  background: rgba(157, 175, 132, 0.2);
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(157, 175, 132, 1);
}

/* 佳节礼品 */
.festivalGift {
  width: 690rpx;
  border-radius: 20rpx;
  margin: 0 auto 54rpx;
  background-color: #fff;
}

.festivalGift .festivalGift_bg {
  width: 690rpx;
  height: 128rpx;
  vertical-align: middle;
}

.festivalGiftWap {
  width: 642rpx;
  margin: 0 auto 20rpx;
}

.festivalGiftItem {
  padding-top: 24rpx;
  height: 464rpx;
}

.festivalGiftItem .festivalGiftItem_bg {
  width: 100%;
  height: 362rpx;
  vertical-align: middle;
}

.festivalGiftItem_tip {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 94rpx;
  margin-bottom: 8rpx;
}

.festivalGiftItem_tip_name {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(66, 76, 80, 1);

}

.festivalGiftItem_tip_price text:first-child {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(247, 55, 2, 1);
  margin-right: 12rpx;
}

.festivalGiftItem_tip_price text:last-child {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(172, 187, 188, 1);
  text-decoration: line-through;
}

/* 优惠不断 */
.preferentialConstantly .preferentialConstantly_title {
  position: relative;
  height: 50rpx;
  font-size: 36rpx;
  font-weight: 500;
  line-height: 50rpx;
  color: rgba(66, 76, 80, 1);
  padding-left: 30rpx;
  padding-bottom: 34rpx;
}

.preferentialConstantly .preferentialConstantly_title::after {
  content: '';
  position: absolute;
  top: 5rpx;
  left: 0;
  width: 10rpx;
  height: 40rpx;
  background-color: #ED5735;
  border-top-right-radius: 5rpx;
  border-bottom-right-radius: 5rpx;
}

.preferentialConstantly_wap {
  box-sizing: border-box;
  width: 690rpx;
  margin: 0 auto;
  padding: 24rpx 24rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.preferentialConstantlyItem {
  display: flex;
  height: 254rpx;
  margin-bottom: 24rpx;
}

.preferentialConstantlyItem:last-child {
  margin: 0;
}

.pli_img {
  position: relative;
  width: 240rpx;
  height: 240rpx;
  margin-right: 24rpx;
}

.pli_img .pli_img_main {
  width: 100%;
  height: 100%;
}

.pli_img .pli_img_icon {
  position: absolute;
  top: 0;
  left: 10rpx;
  width: 50rpx;
  height: 70rpx;
}

.pli_mes {
  flex: 1;
  height: 240rpx;
}

.pli_mes_title {
  padding-top: 11rpx;
  height: 100rpx;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 50rpx;
  color: rgba(66, 76, 80, 1);
}

.pli_mes_synopsis {
  display: inline-block;
  max-width: 338rpx;
  padding: 3rpx 14rpx;
  height: 48rpx;
  background: rgba(157, 175, 132, 0.2);
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 48rpx;
  color: rgba(157, 175, 132, 1);
  margin-bottom: 8rpx;
}

.pli_mes_price {
  height: 45rpx;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 45rpx;
  color: rgba(247, 55, 2, 1);
  margin-bottom: 4rpx;
}

.pli_mes_make {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 33rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(172, 187, 188, 1);
}

.pli_mes_make text:first-child {
  text-decoration: line-through;
}

/* 底部 */
.footer {
  padding: 34rpx 0 30rpx 0;
  height: 33rpx;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 33rpx;
  text-align: center;
  color: rgba(172, 187, 188, 1);
}