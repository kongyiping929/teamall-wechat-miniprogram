/* 管理操作 */
page {
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}

/* 店铺 */
.store {
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 690rpx;
    height: 100rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
    margin: 0 auto 20rpx;
    padding: 0 32rpx;
}

.store text:first-child {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(85, 98, 102, 1);
}

.store text:last-child {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(121, 146, 98, 1);
}

/* 操作 */
.operate {
    width: 690rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
    margin: 0 auto;
}

.operateTop {
    display: flex;
    align-items: center;
    box-sizing: border-box;
    height: 196rpx;
    padding: 32rpx 0;
}

.operateTopItem {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 25%;
}

.operateTopItem image {
    width: 80rpx;
    height: 80rpx;
    vertical-align: middle;
    margin-bottom: 18rpx;
}

.operateTopItem text {
    height: 34rpx;
    font-size: 24rpx;
    font-weight: 400;
    line-height: 34rpx;
    color: rgba(66, 76, 80, 1);
}

.operateBottomItem {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 32rpx;
    height: 100rpx;
    border-top: 2rpx solid rgba(215, 224, 224, 0.3);
}

.operateBottomItemL {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(85, 98, 102, 1);
}

.operateBottomItemR text {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(121, 146, 98, 1);
}

.operateBottomItemR image {
    width: 24rpx;
    height: 24rpx;
}
/* 店铺模态框 */

.personModal {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 5;
}

.personModal .personWap {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  min-height: 600rpx;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 80vh;
  overflow: scroll;
}

.personModal .personWap .personTitle {
  position: relative;
  height: 92rpx;
  line-height: 92rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #333;
  border-bottom: 2rpx solid #f2f2f3;
  text-align: center;
}

.personModal .personWap .personTitle view {
  margin-left: 99rpx;
}

.personModal .personWap .personTitle image {
  position: absolute;
  top: 0;
  right: 0;
  width: 31rpx;
  height: 31rpx;
  padding: 31rpx 34rpx 26rpx;
}

.item {
  position: relative;
  font-size: 24rpx;
  color: #424c50;
  display: flex;
  justify-content: space-between;
  background: rgba(255, 255, 255, 1);
  border-bottom: 2rpx solid #f2f2f3;
  padding: 20rpx 40rpx;
  margin: 10rpx 0;
}

.item .name {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(60, 58, 57, 1);
  padding-right: 10rpx;
}

.item .phone {
  color: #799262;
}
.item .phone image{
  width: 28rpx;
  height: 20rpx;
}

.personModal .personWap .personBtn {
  position: absolute;
  bottom: 10rpx;
  left: 5%;
  margin: 44rpx auto 38rpx;
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #799262;
  border-radius: 88rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: white;
}

.personNone {
  padding-top: 108rpx;
  margin-bottom: 30rpx;
}

.personNone .personNoneBg {
  width: 200rpx;
  height: 144rpx;
  margin: 0 auto 60rpx;
}

.personNone .personNoneBg image {
  width: 100%;
  height: 100%;
  vertical-align: middle;
}

.personNoneTip {
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  line-height: 40rpx;
  color: rgba(153, 153, 153, 1);
  margin-bottom: 60rpx;
  text-align: center;
}