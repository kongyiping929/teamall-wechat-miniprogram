/* 管理操作 */
page {
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}

/* 店铺 */
.store {
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 690rpx;
    height: 100rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
    margin: 0 auto 20rpx;
    padding: 0 32rpx;
}

.store text:first-child {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(85, 98, 102, 1);
}

.store text:last-child {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(121, 146, 98, 1);
}

/* 操作 */
.operate {
    width: 690rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
    margin: 0 auto;
}

.operateTop {
    display: flex;
    align-items: center;
    box-sizing: border-box;
    height: 196rpx;
    padding: 32rpx 0;
}

.operateTopItem {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    width: 25%;
}

.operateTopItem image {
    width: 80rpx;
    height: 80rpx;
    vertical-align: middle;
    margin-bottom: 18rpx;
}

.operateTopItem text {
    height: 34rpx;
    font-size: 24rpx;
    font-weight: 400;
    line-height: 34rpx;
    color: rgba(66, 76, 80, 1);
}

.operateBottomItem {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 32rpx;
    height: 100rpx;
    border-top: 2rpx solid rgba(215, 224, 224, 0.3);
}

.operateBottomItemL {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(85, 98, 102, 1);
}

.operateBottomItemR text {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(121, 146, 98, 1);
}

.operateBottomItemR image {
    width: 24rpx;
    height: 24rpx;
}