/* 产品微广场 */
page {
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}

/* 产品banner */
.banner {
    width: 690rpx;
    height: 216rpx;
    margin: 0 auto 32rpx;
    border-radius: 20rpx;
    overflow: hidden;
}

.banner image {
    width: 100%;
    height: 100%;
}

/* 产品简介 */
.synopsis {
    width: 690rpx;
    margin: 0 auto 32rpx;
}

.synopsis view:first-child {
    font-size: 32rpx;
    font-weight: 400;
    line-height: 44rpx;
    color: rgba(66, 76, 80, 1);
    margin-bottom: 8rpx;
}

.synopsis view:last-child {
    font-size: 24rpx;
    font-weight: 400;
    line-height: 34rpx;
    color: rgba(85, 98, 102, 1);
}

/* 打卡信息 */
.clockWapper {
    box-sizing: border-box;
    padding: 40rpx 40rpx 42rpx;
    width: 690rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
    margin: 0 auto 20rpx;
}

.clockWapper.length {
    padding-bottom: 33rpx;
    margin-bottom: 20rpx;
}

.clockTitleBar {
    display: flex;
    justify-content: space-between;
    height: 78rpx;
    margin-bottom: 24rpx;
}

.clockTitleBarLeft,
.clockTitleBarRight {
    display: flex;
    height: 78rpx;
    align-items: center;
}

.clockTitleBarLeft image {
    width: 78rpx;
    height: 78rpx;
    margin-right: 41rpx;
}

.clockTitleBarLeft text {
    font-size: 34rpx;
    font-weight: 600;
    color: rgba(66, 76, 80, 1);
}

.clockTitleBarRight image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 16rpx;
}

.clockTitleBarRight text {
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(121, 146, 98, 1);
}

.clockContent {
    position: relative;
    line-height: 36rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(85, 98, 102, 1);
    margin-bottom: 36rpx;
}

.clockContent.none {
    height: auto;
}

.clockContent text {
    position: absolute;
    bottom: 3rpx;
    right: 0;
    width: 52rpx;
    height: 37rpx;
    font-size: 26rpx;
    font-family: PingFang SC;
    font-weight: 400;
    line-height: 37rpx;
    color: rgba(121, 146, 98, 1);
    z-index: 5;
    background-color: #fff;
}

.clockImg {
    margin-bottom: 4rpx;
}

.clockImg.length {
    margin-bottom: 36rpx;
}

.clockImg image {
    width: 180rpx;
    height: 180rpx;
    margin-right: 34rpx;
}

.clockImg image:nth-child(3n) {
    margin-right: 0;
}

.TorderMes {
    box-sizing: content-box;
    display: flex;
    height: 160rpx;
    padding-top: 32rpx;
    border-top: 1rpx dashed rgba(215, 224, 224, 1);
}

.TorderMesPhoto {
    width: 160rpx;
    height: 160rpx;
    margin-right: 28rpx;
}

.TorderMesTip {
    width: 416rpx;
}

.TorderMesTipTitle {
    height: 45rpx;
    font-size: 32rpx;
    font-weight: 400;
    line-height: 45rpx;
    color: rgba(66, 76, 80, 1);
    margin-bottom: 10rpx;
}

.TorderMesPrice {
    display: flex;
    align-items: center;
    height: 45rpx;
    margin-bottom: 21rpx;
}

.TorderMesPrice text:first-child {
    font-size: 32rpx;
    font-weight: 600;
    color: rgba(247, 55, 2, 1);
    margin-right: 12rpx;
}

.TorderMesPrice text:last-child {
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(172, 187, 188, 1);
    text-decoration: line-through;
}

.TorderMesTipAttr {
    /* display: flex;
    align-items: center; */
    display: inline-block;
    height: 46rpx;
    background: rgba(243, 248, 241, 1);
    border-radius: 8rpx;
    padding: 0 14rpx;
}

.TorderMesTipAttr text {
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(172, 187, 188, 1);
    margin-right: 6rpx;
}

.TorderMesTipAttr image {
    width: 24rpx;
    height: 24rpx;
}