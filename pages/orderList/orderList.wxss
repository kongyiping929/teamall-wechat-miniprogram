/* 订单列表 */
page {
    padding-top: 108rpx;
}

/* 标题栏 */
.bar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 88rpx;
    display: flex;
    justify-content: space-around;
    background: rgba(255, 255, 255, 1);
    font-size: 32rpx;
    font-weight: 400;
    color: rgba(85, 98, 102, 1);
}

.bar text {
    height: 88rpx;
    line-height: 88rpx;
}

.bar text.active {
    position: relative;
    color: #799262;
}

.bar text.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 50rpx;
    height: 6rpx;
    background: rgba(121, 146, 98, 1);
    border-radius: 6rpx;
    transform: translateX(-50%);
}

