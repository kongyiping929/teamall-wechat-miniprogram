/* pages/addAddress/addAddress.wxss */

.tip {
    height: 50rpx;
    line-height: 50rpx;
    background: rgba(252, 246, 232, 1);
    padding-left: 30rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(228, 101, 58, 1);
}

.item {
    box-sizing: border-box;
    display: flex;
    align-items: center;
    height: 100rpx;
    background: rgba(255, 255, 255, 1);
    border-bottom: 2rpx solid #F2F2F3;
    padding: 0 30rpx;
}

.item text {
    width: 178rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(60, 58, 57, 1);
}

.item picker {
    flex: 1;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #333333;
}

.item picker .picker {
    height: 100rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #333333;
}

.item input {
    flex: 1;
    font-size: 28rpx;
    font-weight: 400;
    color: #333333;
}

.itemSwitch {
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100rpx;
    background: rgba(255, 255, 255, 1);
    border-bottom: 2rpx solid #F2F2F3;
    padding: 0 30rpx;
}

.itemSwitch text {
    width: 178rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(60, 58, 57, 1);
}

.handle {
    width: 680rpx;
    height: 88rpx;
    background: #799262;
    border-radius: 88rpx;
    line-height: 88rpx;
    text-align: center;
    font-size: 32rpx;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    margin: 0 auto;
}