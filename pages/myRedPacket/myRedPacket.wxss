/* 顶部 */
.topBar {
    box-sizing: border-box;
    padding-top: 18rpx;
    height: 348rpx;
    background-color: #ED744F;
}

.topBarMes {
    display: flex;
    height: 114rpx;
    margin-bottom: 32rpx;
}

.topBarMes image {
    width: 100rpx;
    height: 100rpx;
    margin-left: 30rpx;
    margin-right: 42rpx;
}

.topBarMesTip {
    height: 114rpx;
}

.topBarMesTipTitle {
    height: 40rpx;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 40rpx;
    color: rgba(255, 255, 255, 1);
    margin-bottom: 8rpx;
}

.topBarMesTipPrice {
    height: 66rpx;
    font-size: 48rpx;
    font-weight: 500;
    line-height: 66rpx;
    color: rgba(255, 255, 255, 1);
}

.topBarBtn {
    width: 380rpx;
    height: 76rpx;
    border: 2rpx solid rgba(255, 255, 255, 1);
    border-radius: 88rpx;
    margin: 0 auto;
    font-size: 32rpx;
    font-weight: 400;
    line-height: 76rpx;
    color: rgba(255, 255, 255, 1);
    text-align: center;
}

/* 列表 */
.list {
    position: relative;
    top: -70rpx;
    width: 690rpx;
    margin: 0 auto;
    background-color: #fff;
    border-radius: 20rpx;
}

.listTitle {
    height: 40rpx;
    line-height: 40rpx;
    padding: 24rpx 32rpx 18rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(66, 76, 80, 1);
}

.item {
    box-sizing: border-box;
    height: 200rpx;
    padding: 32rpx 32rpx 34rpx;
    border-top: 1rpx solid rgba(215, 224, 224, 1);
}

.itemTime {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 34rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(172, 187, 188, 1);
    margin-bottom: 24rpx;
}

.itemMes {
    display: flex;
    justify-content: space-between;
    height: 76rpx;
}

.itemMesPrice {
    flex: 1;
}

.itemMesPriceAdd {
    height: 40rpx;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 40rpx;
    color: #556266;
    margin-bottom: 8rpx;
}

.itemMesPriceAdd text:last-child {
    color: #799262;
}

.itemMesPriceminus {
    height: 28rpx;
    font-size: 20rpx;
    font-weight: 400;
    line-height: 28rpx;
    color: rgba(172, 187, 188, 1);
}

.itemMesStatus {
    width: 160rpx;
    height: 60rpx;
    background: #D7E0E0;
    border-radius: 12rpx;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 60rpx;
    color: #ACBBBC;
    text-align: center;
}

.itemMesStatus.err {
    color: #ED5735;
    background-color: #FDE4E3;
}

.itemMesStatus.succ {
    color: #09BB07;
    background-color: #CDF1CD;
}