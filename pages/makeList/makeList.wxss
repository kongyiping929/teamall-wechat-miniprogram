/* 我的预约 */
page {
    padding-top: 20rpx;
}

/* 预约订单 */
.order {
    width: 690rpx;
    /* height: 430rpx; */
    background: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
    margin: 0 auto 26rpx;
}

.orderTime {
    display: flex;
    align-items: center;
    padding: 24rpx 22rpx 20rpx;
    height: 50rpx;
}

.orderTime text {
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(121, 146, 98, 1);
}

.orderTime image {
    width: 24rpx;
    height: 24rpx;
    vertical-align: middle;
    margin-right: 18rpx;
}

.orderMes {
    display: flex;
    height: 160rpx;
    padding: 0 24rpx;
    margin-bottom: 36rpx;
}

.orderMesPhoto {
    width: 160rpx;
    height: 160rpx;
    margin-right: 28rpx;
    border-radius: 10rpx;
}

.orderMesTip {
    width: 438rpx;
}

.orderMesTipTitle {
    height: 45rpx;
    font-size: 32rpx;
    font-weight: 400;
    line-height: 45rpx;
    color: rgba(66, 76, 80, 1);
    margin-bottom: 26rpx;
}

.orderMesTipAttr {
    display: inline-block;
    height: 45rpx;
    background: rgba(243, 248, 241, 1);
    border-radius: 8rpx;
    padding: 8rpx 14rpx 0;
    line-height: 30rpx;
    overflow: hidden;

}

.orderMesTipAttr text {
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(172, 187, 188, 1);
    margin-right: 6rpx;
}

.orderMesTipAttr image {
    width: 24rpx;
    height: 24rpx;
    vertical-align: middle;

}

.orderAddress {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 24rpx;
    height: 36rpx;
    margin-bottom: 32rpx;
}

.orderAddress image {
    width: 24rpx;
    height: 29rpx;
}

.orderAddress text:nth-child(2) {
    max-width: 261rpx;
    font-size: 22rpx;
    font-weight: 400;
    color: rgba(85, 98, 102, 1);
}

.orderAddress text:nth-child(3),
.orderAddress text:nth-child(5) {
    width: 1rpx;
    height: 33rpx;
    background-color: rgba(215, 224, 224, 1);
}

.orderAddress view:nth-child(4) {
    width: 160rpx;
    height: 48rpx;
    display: flex;
    align-items: center;
}

.orderAddress view:nth-child(4) text:first-child {
    font-size: 22rpx;
    font-weight: 400;
    color: rgba(85, 98, 102, 1);
    margin-right: 8rpx;
}

.orderAddress view:nth-child(4) text:last-child {
    font-size: 22rpx;
    font-weight: 400;
    color: rgba(121, 146, 98, 1);
}

.orderAddress text:nth-child(6) {
    width: 120rpx;
    font-size: 22rpx;
    font-weight: 400;
    color: rgba(85, 98, 102, 1);
}

.orderPay {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 92rpx;
    padding: 0 24rpx;
    border-top: 1rpx solid rgba(215, 224, 224, 1);
}

.orderPay view:first-child {
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(172, 187, 188, 1);
}

.orderPay view:last-child {
    width: 150rpx;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    background: rgba(247, 55, 2, 1);
    border-radius: 30rpx;
    font-size: 26rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
}

.orderPay view:last-child.none {
    background-color: #D7E0E0;
    color: rgba(172, 187, 188, 1);
}